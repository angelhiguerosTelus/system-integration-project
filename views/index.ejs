<html id="html" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DSU Todo - Angel Higueros</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <div class="container">
      <div class="level has-background-primary-dark p-5">
        <div class="level-item">
          <span class="title is-2 has-text-white-ter">DSU TODO</span>
        </div>
      </div>

      <div style="height: 75%; overflow: auto">
        <div class="level p-5">
          <div class="level-item">
            <table class="table is-fullwidth">
              <thead>
                <tr>
                  <th style="width: 10%"></th>
                  <th style="width: 80%"></th>
                  <th style="width: 5%"></th>
                  <th style="width: 5%"></th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="level has-background-primary-dark p-5">
          <div class="level-item">
            <input name="description" id="description" required class="input" type="text" />
            <input name="_uid" id="_uid" required class="input" type="hidden" />
            <input name="state" id="state" required class="input" type="hidden" />
            <button  id="btnSave"  onclick="postTodo()" type="submit" class="button is-success">ADD</button>

            <button id="btnUpdate" onclick="updateTodo()" type="button" class="button is-success is-hidden">UPDATE</button>
          </div>
      </div>
    </div>

    <script src="./js/app.js"></script>
  </body>
</html>
